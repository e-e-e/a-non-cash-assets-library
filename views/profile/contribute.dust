<form name="contribute" action="{action}" method="post">
	{?type}
		<input type="hidden" name="type" value="{type}">
	{/type}
	{?thing.thing_id}
		<input type="hidden" name="thing_id" value="{thing.thing_id}">
	{/thing.thing_id}
	<label for="name">Short name:</label>
	<input type="text" name="name" placeholder="eg. {randomthing.name}" required='true' value="{thing.name}"></input><br>
	<label for="description">Longer description:</label><br>
	<textarea name="description" placeholder="{+placeholder/}">{thing.description}</textarea><br>
	<input type="checkbox" name="public" checked="checked" /><label for="public">Publicly listed</label><br>
	<button type="submit">{?thing}Update{:else}Contribute{/thing}</button>
</form>